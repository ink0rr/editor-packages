{
	"$schema": "http://json-schema.org/draft-07/schema",
	"type": "object",
	"properties": {
		"type": {
			"title": "Type",
			"type": "string",
			"enum": ["linear", "bezier", "catmull_rom", "bezier_chain"]
		},
		"nodes": {
			"title": "Nodes",
			"anyOf": [
				{
					"type": "array",
					"items": {
						"anyOf": [
							{
								"type": "number"
							},
							{
								"type": "string"
							}
						]
					}
				},
				{
					"type": "object",
					"patternProperties": {
						"^\\d+(\\.\\d+)?$": {
							"type": "object",
							"additionalProperties": false,
							"properties": {
								"value": {
									"type": "number"
								},
								"slope": {
									"type": "number"
								}
							}
						}
					}
				}
			]
		},
		"input": {
			"title": "Input",
			"$ref": "../molang/embedded.json"
		},
		"horizontal_range": {
			"title": "Horizontal Range",
			"$ref": "../molang/embedded.json"
		}
	}
}
