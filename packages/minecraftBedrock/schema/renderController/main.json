{
	"$schema": "http://json-schema.org/draft-07/schema",
	"title": "Render Controller",
	"defaultSnippets": [
		{
			"label": "New render controller",
			"body": {
				"format_version": "${1:1.10.0}",
				"render_controllers": {
					"controller.render.$2.${3:${TM_FILENAME/[\\.].*//}}": {
						"geometry": "Geometry.${4:default}",
						"materials": [{ "*": "Material.${5:default}" }],
						"textures": ["Texture.${6:default}"]
					}
				}
			}
		}
	],
	"required": ["format_version", "render_controllers"],
	"type": "object",
	"allOf": [
		{
			"properties": {
				"format_version": {
					"$ref": "../project/formatVersionEnum.json"
				}
			}
		},
		{
			"if": {
				"properties": {
					"format_version": {
						"enum": [
							"",
							"1.8.0",
							"1.10.0",
							"1.11.0",
							"1.12.0",
							"1.13.0",
							"1.14.0",
							"1.16.0",
							"1.16.100",
							"1.16.200",
							"1.16.210",
							"1.16.220",
							"1.17.0",
							"1.17.10",
							"1.17.20",
							"1.17.30",
							"1.17.40",
							"1.18.0",
							"1.18.10",
							"1.18.20",
							"1.18.30",
							"1.19.0",
							"1.19.10",
							"1.19.20",
							"1.19.30",
							"1.19.40",
							"1.19.50",
							"1.19.60",
							"1.19.70"
						]
					}
				}
			},
			"then": {
				"$ref": "./v1.17.0/main.json"
			}
		}
	]
}
